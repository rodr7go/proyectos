html
	height 100%
body
	background linear-gradient(indianred, #EB5E66, firebrick)
	
.uno
	background linear-gradient(darkblue, #00009C, #003EFF)
	height 150px
	margin 2em 2em
	position absolute
	transition all .4s linear
	width 300px
	border-radius 50%

	&:hover
		margin 1em 2em
		
	&:after
		border-radius 50%
		bottom -25px
		content ''
		margin 0 .5em
		transition all .5s
		
	&:hover:after
		background rgba(black, .3)
		height 20px
		position absolute
		width 290px

.dos
	background-image url("../img/git.png")
	// background-position 50% 35%
	background-size cover
	border 10px double cyan
	border-radius 50%
	display inline-block
	height 200px
	left 30%
	margin 1em 0
	position relative
	transition all .5s
	width 200px
	
	&:hover
		border-radius inherit
		border 10px double black
		
.tres
	width 250px
	height 150px
	background #FCF75E
	margin 0 2em
	
	&:after
		content ''
		transition all .8s ease
		width 0px
		height 0px
		background linear-gradient(-45deg,#eee 0%,#ddd 15%,#ccc 25%,#bbb 40%,#aaa 49% ,#FFD90F 50%)
	
	&:hover:after
		width 60px
		height 60px
		position absolute
		box-shadow 3px 3px 3px 2px rgba(black .6)