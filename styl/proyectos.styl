html
	height 100%
body
	background linear-gradient(indianred, #EB5E66, firebrick)
	
.uno
	background linear-gradient(darkblue, #00009C, #003EFF)
	height 150px
	margin 2em 2em
	position absolute
	transition all .4s linear
	width 300px

	&:hover
		margin 1em 2em
		
	&:after
		border-radius 50%
		bottom -25px
		content ''
		margin 0 .5em
		transition all .5s
		
	&:hover:after
		background rgba(black, .3)
		height 20px
		position absolute
		width 290px

.dos
	background-image url("http://images.forwallpaper.com/files/images/6/61cc/61ccb4ce/776256/night-city-wallpaper-blurry-cityscape-rain-unsharp-blurred.jpg")
	background-size cover
	border 10px double cyan
	border-radius 50%
	display inline-block
	height 200px
	left 30%
	margin 1em 0
	position relative
	transition all .5s
	width 200px
	
	&:hover
		border-radius inherit